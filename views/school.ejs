	      <section id="main-content">
          <section class="wrapper">
              <!-- page start-->
              <div class="row">
                  <div class="col-lg-12">
                <section class = "panel" style="padding: 20px;">

				<header class="panel-heading" style="background: #19BF6C;">
                  <b><font color = "white"> School Information </font></b>
                </header>

	<div class="row" style="padding-bottom: 20px;">

	<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>

		<!-- LOCAL INFORMATION -->
		
			<section class="panel" style="padding: 20px;">
				<header class="panel-heading" style="background: #19BF6C;">
                  <b><font color = "white"> School Details </font></b>
                </header>

					<p>
						<strong>Id</strong>: <%= school._id %><br>
						<strong>Name</strong>: <%= school.name %><br>
						<strong>Location</strong>: <%= school.city %>, <%= school.state %><br>
						<strong>Courses</strong>: <a href="/school/<%=school._id%>/courses">View</a><br>
					</p>

			</section>

			<section class="panel" style="padding: 20px;">
				<header class="panel-heading" style="background: #19BF6C;">
                  <b><font color = "white"> Professors </font></b>
                </header>

					<p>
						<% for(var index in professors) {%>
							<a href="/professor/<%=professors[index]._id%>"><%=professors[index].name%></a><br>
						<%}%>
					</p>

			</section>

			<section class="panel" style="padding: 20px;">
				<header class="panel-heading" style="background: #19BF6C;">
                  <b><font color = "white"> Add a Professor </font></b>
                </header>

					<form action="/add-professor/<%=school._id%>" method="post">
						<div class="form-group">
							<label>Professor's name</label>
							<input type="text" class="form-control" name="name">
						</div>
						<div class="form-group">
							<label>Department</label>
							<input type="text" class="form-control" name="department">
						</div>

						<button type="submit" class="btn btn-warning btn-lg">Add</button>
					</form>
			</section>
		

	</div>
</section>
