<!doctype html>
<html>
<head>
	<title>Scheduler - <%=course.number%>-<%=section.number%></title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<link rel="stylesheet" href="/public/css/jquery-ui.min.css">
	<!-- Bootstrap core CSS -->
    <link href="/public/css/bootstrap.min.css" rel="stylesheet">
    <link href="/public/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="/public/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="/public/css/style.css" rel="stylesheet">
    <link href="/public/css/style-responsive.css" rel="stylesheet" />

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
      <script src="public/js/html5shiv.js"></script>
      <script src="public/js/respond.min.js"></script>
    <![endif]-->
</head>

<body>
  <section id="container" >
      <!--header start-->
      <header class="header white-bg">
              <div class="sidebar-toggle-box">
                  <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
              </div>
            <!--logo start-->
          
            <a href="/" class="logo">Student <span>Scheduler  </span><small><font color="gray">beta</font></small></a>
            <!--logo end-->

            <div class="top-nav ">
                <!--search & user info start-->
                <ul class="nav pull-right top-menu">
                    <!-- user login dropdown start-->
                    <%if (user){%>
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <img alt="" src="<%=user.local.avatar%>" width="30" height="30">
                            <span class="username"><%=user.username%></span>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu extended logout">
                            <div class="log-arrow-up"></div>
                            <li><a href="/profile"><i class=" fa fa-suitcase"></i>  Profile</a></li>
                            <li><a href="/profile-edit"><i class="fa fa-cog"></i>  Settings</a></li>
             
                            <li><a href="/logout"><i class="fa fa-key"></i>  Log Out</a></li>
                        </ul>
                    </li>
                    <%} else{%>
                      <li>
                        <a href="/login" class="btn btn-info">Login or Sign up</a>
                      </li>
                    <%}%>
                    <!-- user login dropdown end -->
                </ul>
                <!--search & user info end-->
            </div>
        </header>
      <!--header end-->
      <!--sidebar start-->
      <aside>
          <div id="sidebar"  class="nav-collapse ">
              <!-- sidebar menu start-->
             <ul class="sidebar-menu" id="nav-accordion">
                  <li class="sub-menu">
                      <a  href="/profile">
                          <i class="fa fa-suitcase"></i>
                          <span> My Profile</span>
                      </a>
                  </li>

                    <li class="sub-menu">
                      <a href="/school/<%= school._id%>" >
                          <i class="fa fa-comments-o"></i>
                          <span> My School </span>
                      </a>
                     
                  </li>
                
                  <li class="sub-menu">
                      <a href="/schedule" >
                          <i class=" fa fa-th"></i>
                          <span>My Schedule</span>
                      </a>
                  </li>



              </ul>
              <!-- sidebar menu end-->
          </div>
      </aside>
      <!--sidebar end-->

      
      <!--main content start-->


	      <section id="main-content">
          <section class="wrapper">
              <!-- page start-->
              <div class="row">
                  <div class="col-lg-12">
                <section class = "panel" style="padding: 20px;">

				

	<div class="row" style="padding-bottom: 20px;">


		<!-- LOCAL INFORMATION -->
			<ol class="breadcrumb">
			  <li><a href="/">Home</a></li>
			  <li><a href="/school/<%=school._id%>"><%=school.name%></a></li>
			  <li><a href="/course/<%=course._id%>"><%=course.number%></a></li>
			  <li class="active"><%= section.number %></li>
			</ol>
			 <section class="panel-body bio-graph-info" >
				<header class="panel-heading" style="background: #1975FF;">
                  <b><font color = "white"><i class=" fa fa-folder-open-o"></i> Section Details </font></b>
                </header>

                		<div class="panel-body bio-graph-info">
						       <div class="row">
                                  <div class="bio-row">
                                      <p><span><b>Section #: </b></span> <%=section.number %></p>
                                  </div>
                                  <div class="bio-row">
                                      <p><span><b>Location: </b></span><%= section.location %></p>
                                  </div>
                                  <div class="bio-row">
                                      <p><span><b>Meet Time: </b></span><%=section.meet_time%></p>
                                  </div>
                                  <div class="bio-row">
                                      <p><span><b>Status: </b></span><%= section.status %></p>
                                  </div>
                                  <div class="bio-row">
                                      <p><span><b>Open: </b></span><%= section.open %></p>
                                  </div>
                                  <%if(professor){%>
                                  <div class="bio-row">
                                      <p><span><b>Professor: </b></span><a href="/professor/<%=professor._id%>"><%= professor.name %></a></p>
                                  </div>
                                  <%}else{%>
                                  <div class="bio-row">
                                      <p><span><b>Professor: </b></span> Unknown</p>
                                  </div>
                                  <%}%>
                               
                              </div>
					</div>

			</section>

			 <section class="panel-body bio-graph-info" >
				<header class="panel-heading" style="background: #1975FF;">
                  <b><font color = "white"><i class=" fa fa-file-text"></i> Documents </font></b>
                </header>

                              <br>
                              <%var documents = section.documents;%>
                              <%if(documents.length==0){%>
                              There aren't any documents here. Add one below!
                              <%} else {%>
                              <table class="table table-striped table-advance table-hover">
                              <thead>
                              <tr>
                                  <th><i class="fa fa-bullhorn"></i> Document Title </th>
                                  <th class="hidden-phone"><i class="fa fa-question-circle"></i> Description </th>
                                  
                                  <th><i class="fa fa-file-text-o"></i> Open </th>
                              </tr>
                              </thead>
                              <tbody>
                             <% for(var index = 0; index < documents.length; index++) {%>
                              <tr>
                                  <td><a ><%=documents[index].title%></a></td>
                                  <td class="hidden-phone"> <%=documents[index].description%></td>
                                 
                                  <td>
                                  <button type="button" class="btn btn-sm btn-success"><i class="fa fa-folder-open"></i> <a href="/public/user_documents/<%=documents[index].file_name%>"><font color = "white"> Open File </font></a></button>
                                  </td>  
                              </tr>
                              <%}%>                  
                              </tbody>
                          </table>
                          <%}%>
			</section>


			<section class="panel-body bio-graph-info" >
							<header class="panel-heading" style="background: #1975FF;">
			                  <b><font color = "white"><i class=" fa fa-files-o"></i> Add a Document for this Section </font></b>
			                </header>
			                	<br>
					<form action="/section/<%=section._id%>/add-document" method="post" enctype="multipart/form-data">
						<div class="form-group">
							<label>Title</label>
							<input type="text" class="form-control" name="title">
						</div>
						<div class="form-group">
							<label>Description</label>
							<input type="text" class="form-control" name="description">
						</div>
						<div class="form-group">
							<label>Choose your file</label>
							<input type="file" class="form-control" name="document">
						</div>
						<button type="submit" class="btn btn-success btn-lg pull-right"><i class="fa fa-check-circle"></i> Add Document</button>
					</form>
			</section>

		

	</div>
</section>
</div>
</div>
</section>
</section>
    
      <!--main content end-->
      <!--footer start-->
       <footer class="site-footer">
          <div class="text-center">
              &copy;2014 by Team Tardis, GoogleJump 2014. <a href="/about"><font color="white"><u>About</u></font></a>
              <a href="#" class="go-top">
                  <i class="fa fa-angle-up"></i>
              </a>
          </div>
      </footer>
      <!--footer end-->
  </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="/public/js/jquery.js"></script>
    <script src="/public/js/jquery-1.8.3.min.js"></script>
    <script src="/public/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="/public/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/public/js/jquery.scrollTo.min.js"></script>
    <script src="/public/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="/public/js/jquery.sparkline.js" type="text/javascript"></script>
    <script src="/public/js/jquery.customSelect.min.js" ></script>
    <script src="/public/js/respond.min.js" ></script>

    <!--common script for all pages-->
    <script src="/public/js/common-scripts.js"></script>


</body>
</html>
