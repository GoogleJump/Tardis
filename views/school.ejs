<!doctype html>
<html>
<head>
	<title>School Information - <%=school.name%></title>

	<link rel="stylesheet" href="/public/css/jquery-ui.min.css">
	    <!-- Bootstrap core CSS -->
    <link href="/public/css/bootstrap.min.css" rel="stylesheet">
    <link href="/public/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="/public/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="/public/css/style.css" rel="stylesheet">
    <link href="/public/css/style-responsive.css" rel="stylesheet" />

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
      <script src="public/js/html5shiv.js"></script>
      <script src="public/js/respond.min.js"></script>
    <![endif]-->

</head>
<body>
  <section id="container" >
      <!--header start-->
      <header class="header white-bg">
              <div class="sidebar-toggle-box">
                  <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
              </div>
            <!--logo start-->
          
            <a href="/profile" class="logo">Student <span>Scheduler</span></a>
            <a class="logonew">Welcome To Your Class Scheduler!</a>
            <!--logo end-->

            <div class="top-nav ">
                <!--search & user info start-->
                <ul class="nav pull-right top-menu">
                    <li>
                        <input type="text" class="form-control search" placeholder="Search">
                    </li>
                    <!-- user login dropdown start-->
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <img alt="" src="public/img/avatar1_small.jpg">
                            <span class="username">username</span>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu extended logout">
                            <div class="log-arrow-up"></div>
                            <li><a href="/profile"><i class=" fa fa-suitcase"></i>  Profile</a></li>
                            <li><a href="/profile-edit"><i class="fa fa-cog"></i>  Settings</a></li>
                            <li><a href="/lock_screen"><i class="fa fa-lock"></i> Lock </a></li>
                            <li><a href="/logout"><i class="fa fa-key"></i>  Log Out</a></li>
                        </ul>
                    </li>
                    <!-- user login dropdown end -->
                </ul>
                <!--search & user info end-->
            </div>
        </header>
      <!--header end-->
      <!--sidebar start-->
      <aside>
          <div id="sidebar"  class="nav-collapse ">
              <!-- sidebar menu start-->
              <ul class="sidebar-menu" id="nav-accordion">
                  <li class="sub-menu">
                      <a href="/profile">
                          <i class="fa fa-suitcase"></i>
                          <span>Profile</span>
                      </a>
                  </li>

                  <li class="sub-menu">
                      <a href="degree.html" >
                          <i class="fa fa-book"></i>
                          <span>Degree Requirements</span>
                      </a>
                  </li>

                  <li class="sub-menu">
                      <a href="/school/<%=school._id%>/courses" >
                          <i class="fa fa-tasks"></i>
                          <span>Class Information</span>
                      </a>
                  </li>

                  <li class="sub-menu">
                      <a href="javascript:;" >
                          <i class="fa fa-shopping-cart"></i>
                          <span>Course Resources</span>
                      </a>
                  </li>

                  <li class="sub-menu">
                      <a href="javascript:;" >
                          <i class="fa fa-bar-chart-o"></i>
                          <span>Professor Rating</span>
                      </a>
                      
                  </li>
                  <li class="sub-menu">
                      <a class="active" href="/school/<%= school._id%>" >
                          <i class="fa fa-building-o"></i>
                          <span> School Information </span>
                      </a>
                     
                  </li>
                  <li class="sub-menu">
                      <a href="/schedule" >
                          <i class=" fa fa-th"></i>
                          <span> My Schedule </span>
                      </a>
                  </li>

              </ul>
              <!-- sidebar menu end-->
          </div>
      </aside>
      <!--sidebar end-->

      
      <!--main content start-->


	      <section id="main-content">
          <section class="wrapper">
              <!-- page start-->
              <div class="row">
                  <div class="col-lg-12">
                <section class = "panel" style="padding: 20px;">

				<header class="panel-heading" style="background: #0099CC; text-transform: uppercase;">
                  <b><font color = "white"><center><i class=" fa fa-info-circle"></i>   School Information </center></font></b>
                </header>

	<div class="row" style="padding-bottom: 20px;">

	<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>

		<!-- LOCAL INFORMATION -->
		
			<section class="panel-body bio-graph-info" >
				<header class="panel-heading" style="background: #19BF6C;">
                  <b><font color = "white"><i class=" fa fa-folder-open-o"></i> School Details </font></b>
                </header>

					<p>
            <br>
						<font color="#0099CC"><strong>Id</strong>: <%= school._id %></font><br>
						<font color="#0099CC"><strong>Name</strong>: <%= school.name %></font><br>
						<font color="#0099CC"><strong>Location</strong>: <%= school.city %>, <%= school.state %></font><br>
						<font color="#0099CC"><strong>Courses</strong>: <a href="/school/<%=school._id%>/courses">View</a></font><br>
					</p>

			</section>

            <section class="panel" style="padding: 20px;">
        <header class="panel-heading" style="background: #19BF6C;">
                  <b><font color = "white"><i class=" fa fa-plus-square-o"></i> Add a Professor </font></b>
                </header>

          <form action="/add-professor/<%=school._id%>" method="post">
            <div class="form-group">
              <br>
              <label>Professor's name</label>
              <input type="text" class="form-control" name="name">
            </div>
            <div class="form-group">
              <label>Department</label>
              <input type="text" class="form-control" name="department">
            </div>

            <button type="submit" class="btn btn-info btn-lg"> <i class=" fa fa-plus-square"></i> Add Professor</button>
          </form>
      </section>

			<section class="panel" style="padding: 20px;">
				<header class="panel-heading" style="background: #19BF6C;">
                  <b><font color = "white"><i class=" fa fa-users"></i> Professors </font></b>
                </header>
                <br>

                              <table class="table table-striped table-advance table-hover">
                              <thead>
                              <tr>
                                  <th><i class="fa fa-bullhorn"></i> Professor </th>
                                  <th class="hidden-phone"><i class="fa fa-question-circle"></i> Department </th>
                                  <th><i class="fa fa-calendar"></i> Rating </th>
                                  <th><i class="fa fa-gift"></i> Records </th>
                              </tr>
                              </thead>
                              <tbody>
                              <% for(var index in professors) {%>
                              <tr>
                                  <td><a href="/professor/<%=professors[index]._id%>"><%=professors[index].name%></a></td>
                                  <td class="hidden-phone"> <%=professors[index].department%> </td>
                                  <td><%=professors[index].Rating%></td>
                                  <td>
                                  <button type="button" class="btn btn-sm btn-danger"><i class="fa fa-folder-open"></i> <a href="/professor/<%=professors[index]._id%>"> <font color = "white"> View </font></a></button>
                                  </td>  
                              </tr>
                              <%}%>                  
                              </tbody>
                          </table>



			</section>


		

	</div>
</section>
</div>
</div>
</section>
</section>
    
      <!--main content end-->
      <!--footer start-->
       <footer class="site-footer">
          <div class="text-center">
              2014 &copy; Student Scheduler by Tardis, GoogleJump.
              <a href="#" class="go-top">
                  <i class="fa fa-angle-up"></i>
              </a>
          </div>
      </footer>
      <!--footer end-->
  </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="/public/js/jquery.js"></script>
    <script src="/public/js/jquery-1.8.3.min.js"></script>
    <script src="/public/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="/public/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/public/js/jquery.scrollTo.min.js"></script>
    <script src="/public/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="/public/js/jquery.sparkline.js" type="text/javascript"></script>
    <script src="/public/js/jquery.customSelect.min.js" ></script>
    <script src="/public/js/respond.min.js" ></script>

    <!--common script for all pages-->
    <script src="/public/js/common-scripts.js"></script>

    <!--script for this page-->
    <script src="js/count.js"></script>


</body>
</html>
