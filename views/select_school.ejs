<!doctype html>
<html>
<head>
	<title>Scheduler - Select school</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:10px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1>Select school</h1>
	</div>

	<div class="row">

	<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>

		<!-- LOCAL INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3>Select your school</h3>
				<form action="/select-school" method="post">
					<select class="form-control" name="school">
						<% for(var index in schoolArray) { %>
							<option value="<%=schoolArray[index]._id %>"><%=schoolArray[index].name %></option>
						<% } %>
					</select>
					</br>
					</br>
					<button type="submit" class="btn btn-warning btn-lg">Next</button>
				</form>
			</div>

			<div class="well">
				<h3>Not in the list? Add your school</h3>
				<form action="/add-school" method="post">
					<input type = "text" class="form-control" name="schoolName">
					</br>
					</br>
					<button type="submit" class="btn btn-warning btn-lg">Add</button>
				</form>
			</div>

		</div>

	</div>

</div>
</body>
</html>

