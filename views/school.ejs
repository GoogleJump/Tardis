<!doctype html>
<html>
<head>
	<title>School Information - <%=school.name%></title>

	<link rel="stylesheet" href="/public/css/jquery-ui.min.css">
	    <!-- Bootstrap core CSS -->
    <link href="/public/css/bootstrap.min.css" rel="stylesheet">
    <link href="/public/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="/public/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="/public/css/style.css" rel="stylesheet">
    <link href="/public/css/style-responsive.css" rel="stylesheet" />

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
      <script src="public/js/html5shiv.js"></script>
      <script src="public/js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
  <section id="container" >
      <!--header start-->
      <header class="header white-bg">
              <div class="sidebar-toggle-box">
                  <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
              </div>
            <!--logo start-->
          
            <a href="/profile" class="logo">Student <span>Scheduler</span></a>
            <a class="logonew">Welcome To Your Class Scheduler!</a>
            <!--logo end-->

            <div class="top-nav ">
                <!--search & user info start-->
                <ul class="nav pull-right top-menu">
                    <li>
                        <input type="text" class="form-control search" placeholder="Search">
                    </li>
                    <!-- user login dropdown start-->
                    <%if (user){%>
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <img alt="" src= "/<%=user.local.avatar_small%>" >
                            <span class="username"><%=user.username%></span>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu extended logout">
                            <div class="log-arrow-up"></div>
                            <li><a href="/profile"><i class=" fa fa-suitcase"></i>  Profile</a></li>
                            <li><a href="/profile-edit"><i class="fa fa-cog"></i>  Settings</a></li>
                            <li><a href="/lock_screen"><i class="fa fa-lock"></i> Lock </a></li>
                            <li><a href="/logout"><i class="fa fa-key"></i>  Log Out</a></li>
                        </ul>
                    </li>
                    <%} else{%>
                      <li>
                        <a href="/login" class="btn btn-info">Login or Sign up</a>
                      </li>
                    <%}%>
                    <!-- user login dropdown end -->
                </ul>
                <!--search & user info end-->
            </div>
        </header>
      <!--header end-->
      <!--sidebar start-->
      <aside>
          <div id="sidebar"  class="nav-collapse ">
              <!-- sidebar menu start-->
              <ul class="sidebar-menu" id="nav-accordion">
                  <li class="sub-menu">
                      <a href="/profile">
                          <i class="fa fa-suitcase"></i>
                          <span>Profile</span>
                      </a>
                  </li>

                  <li class="sub-menu">
                      <a href="/degree" >
                          <i class="fa fa-book"></i>
                          <span>Degree Requirements</span>
                      </a>
                  </li>

                  <li class="sub-menu">
                      <a href="/school/<%=school._id%>/courses" >
                          <i class="fa fa-tasks"></i>
                          <span>Class Information</span>
                      </a>
                  </li>

                  <li class="sub-menu">
                      <a href="javascript:;" >
                          <i class="fa fa-shopping-cart"></i>
                          <span>Course Resources</span>
                      </a>
                  </li>

                  <li class="sub-menu">
                      <a href="javascript:;" >
                          <i class="fa fa-bar-chart-o"></i>
                          <span>Professor Rating</span>
                      </a>
                      
                  </li>
                  <li class="sub-menu">
                      <a class="active" href="/school/<%= school._id%>" >
                          <i class="fa fa-building-o"></i>
                          <span> School Information </span>
                      </a>
                     
                  </li>
                  <li class="sub-menu">
                      <a href="/schedule" >
                          <i class=" fa fa-th"></i>
                          <span> My Schedule </span>
                      </a>
                  </li>

              </ul>
              <!-- sidebar menu end-->
          </div>
      </aside>
      <!--sidebar end-->

      
      <!--main content start-->


	      <section id="main-content">
          <section class="wrapper">
              <!-- page start-->
              <div class="row">
                  <div class="col-lg-12">
                <section class = "panel" style="padding: 20px;">

				

	<div class="row" style="padding-bottom: 20px;">

		<!-- LOCAL INFORMATION -->
		  <input type="hidden" id="schoolId" value="<%=school._id%>"></input>
			<section class="panel-body bio-graph-info" >
          <h1><strong><font color="#19D119"><%= school.name %></font></strong><small> <%= school.city %>, <%= school.state %></small></h1>
          <hr>
          <a href="/school/<%=school._id%>/courses" class='btn btn-primary'>View courses</a><br><br>
          <a href="/school/<%=school._id%>/professors" class='btn btn-primary'>View professors</a><br><br>
          <div class="input-group input-group-lg">
            <input id="omnibox" placeholder="Professor name or course name/number" class="form-control">
            <span class="input-group-btn">
                  <button class="btn btn-default btn-primary" type="button" id="omnibox-button"><span class="glyphicon glyphicon-search" /></button>
              </span>
          </div>
			</section>

      <div class="col-sm-6">
        <table id="course-results-table" class="table" style="display: none;">
          <tr>
            <th>Course number</th>
            <th>Course name</th>
            <th></th>
          </tr>
        </table>
      </div>
      <div class="col-sm-6">
        <table id="professor-results-table" class="table" style="display: none;">
          <tr>
            <th>Professor name</th>
            <th>Department</th>
            <th></th>
          </tr>
        </table>
      </div>
	</div>
</section>
</div>
</div>
</section>
</section>
    
      <!--main content end-->
      <!--footer start-->
       <footer class="site-footer">
          <div class="text-center">
              2014 &copy; Student Scheduler by Tardis, GoogleJump.
              <a href="#" class="go-top">
                  <i class="fa fa-angle-up"></i>
              </a>
          </div>
      </footer>
      <!--footer end-->
  </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="/public/js/jquery.js"></script>
    <script src="/public/js/jquery-1.8.3.min.js"></script>
    <script src="/public/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="/public/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/public/js/jquery.scrollTo.min.js"></script>
    <script src="/public/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="/public/js/jquery.sparkline.js" type="text/javascript"></script>
    <script src="/public/js/jquery.customSelect.min.js" ></script>
    <script src="/public/js/respond.min.js" ></script>

    <!--common script for all pages-->
    <script src="/public/js/common-scripts.js"></script>

    <!-- scripts for this page-->
    <script src="/public/js/school-main.js"></script>
</body>
</html>
