<!doctype html>
<html>
<head>
	<title>Scheduler - Admin - Users</title>
	<link href="/public/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1>Admin - Users</h1>
		<a href="/" class="btn btn-default btn-sm">Home</a>
	</div>

	<div class="row">

		<!-- LOCAL INFORMATION -->
		<div class="col-sm-12">
			<table class="table table-striped">
				<tr>
					<th>Username</th>
					<th>Email</th>
					<th>Name</th>
					<th>Reputation</th>
					<th>Created</th>
					<th>Last login</th>
					<th>Id</th>
					<th>Admin</th>
				</tr>
				<%for(var i=0;i<users.length;i++){%>
					<%var u = users[i];%>
					<tr>
						<td><a href="/user/<%=u._id%>"><%=u.username%></a></td>
						<td><%=u.local.email%></td>
						<td><%=u.local.firstname + ' ' +u.local.lastname%></td>
						<td><%=u.reputation%></td>
						<td><%=u.createdDate%></td>
						<td><%=u.lastLoginDate%></td>
						<td><%=u._id%></td>
						<td>
							<%if(u.admin){%>
							admin
							<%}else{%>
							no
							<%}%>
						</td>
					</tr>
				<%}%>
			</table>
		</div>

	</div>

</div>
</body>
</html>
